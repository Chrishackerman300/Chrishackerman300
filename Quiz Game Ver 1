#include<iostream>
#include<conio.h>
#include<stdlib.h>
#include<windows.h> 
using namespace std;

//Prototipos de las Funciones
void Pregunta1();
void Pregunta2();
void Pregunta3();
void Pregunta4();
void Pregunta5();
void Pregunta6();
void Pregunta7();
void Pregunta8();
void Pregunta9();
void Pregunta10();

//Variables Globales
char respuesta;
int Rcorrec=0, Rincorrec=0;

int main(){
	
	char option;
	system("color f0");
	system("mode con: cols=60 lines=20");
	
	cout<<"\t\t.::Quiz Game::.\n";
	cout<<"------------------------------------------------------------\n";
	
	cout<<"\n1.- Star Game";
	cout<<"\n2.-Options";
	cout<<"\n3.-Exit\n\n";
	cin>> option;
	
	switch(option)
	{
		case '1': 
		system("cls");
		
		for(int i=1; i<=1; i++)
		{
			cout<<"Pregunta ["<<i<<"] \n";
			Pregunta1();
			system("cls");
			cout<<"Pregunta ["<<i+1<<"] \n";
			Pregunta2();
			system("cls");
			cout<<"Pregunta ["<<i+2<<"] \n";
			Pregunta3();
			system("cls");
			cout<<"Pregunta ["<<i+3<<"] \n";
			Pregunta4();
			system("cls");
			cout<<"Pregunta ["<<i+4<<"] \n";
			Pregunta5();
			system("cls");
			cout<<"Pregunta ["<<i+5<<"] \n";
			Pregunta6();
			system("cls");
			cout<<"\nPregunta ["<<i+6<<"] \n";
			Pregunta7();
			system("cls");
			cout<<"\nPregunta ["<<i+7<<"] \n";
			Pregunta8();
			system("cls");
			cout<<"\nPregunta ["<<i+8<<"] \n";
			Pregunta9();
			system("cls");
			cout<<"\nPregunta ["<<i+9<<"] \n";
			Pregunta10();
		}
		
		cout<<"\n\n\t\tResultados: \n";
		cout<<"------------------------------------------------------------\n";
		cout<<"\nRespuestas Correctas: "<< Rcorrec;
		cout<<"\nRespuestas Incorrectas: "<< Rincorrec;
		cout<<"\nADIOS";
		break;
		
		case '2':
			system("cls");
			cout<<"\t\t\tOptions\n\n";
			cout<<"\nInstrucciones: \n";
			cout<<"------------------------------------------------------------\n";
			cout<<"\nEL juego consiste en 10 preguntas de cultura general que son conocidas, con diferentes opciones, ndebra ingresar las opciones que usted crea que son correctas.\n";
			cout<<"\nY al final mostrara su puntaje que obtuvo.";
			break;
			
			case '3':
				cout<<"\nSaliendo...";
				Sleep(900);
				exit(0);
				break;
	}
	
	getch();
	return 0;
}

void Pregunta1()
{
	cout<<"\nCual es la Capital de Francia ";
	cout<<"\na) Paris \tb)Monaco";
	cout<<"\nc)Tokyio \td)Silverstone\n";
	cout<<"\nIngrese el Inciso de la Pregunta: ";
	cin>> respuesta;
	
	if(respuesta == 'a')
	{
		cout<<"\nLA RESPUESTA ES CORRECTA!!";
		Rcorrec++;
	}
	else
	{
		cout<<"\nLA RESPUES ES INCORRECTA.";
		Rincorrec++;
	}
	Sleep(1000);
}


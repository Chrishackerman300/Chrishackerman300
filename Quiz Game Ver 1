void Pregunta10()
{
	cout<<"\nLa integrla de 3+x^2 da como resultado";
	cout<<"\na) x + x^3 + C \t b)3x + x^3/3 + C";
	cout<<"\nc) 3x + x^4/4 + C \t d) x + x^4 + C\n";
	cout<<"\nIngrese el Inciso de la Pregunta: ";
	cin>> respuesta;
	
	if(respuesta == 'a' || respuesta == 'b')
	{
		cout<<"\nLA RESPUESTA EN CORRECTA!!";
		Rcorrec++;
	}
	else
	{
		cout<<"\nLA RESPUESTA ES INCORRECTA.";
		Rincorrec++;
	}
	Sleep(1000);
}

